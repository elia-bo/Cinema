@using Cinema.Domain
@model Cinema.Domain.Film

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Film</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TitoloFilm" class="control-label"></label>
                <input asp-for="TitoloFilm" class="form-control" />
                <span asp-validation-for="TitoloFilm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autore" class="control-label"></label>
                <input asp-for="Autore" class="form-control" />
                <span asp-validation-for="Autore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produttore" class="control-label"></label>
                <input asp-for="Produttore" class="form-control" />
                <span asp-validation-for="Produttore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genere" class="control-label"></label>
                <select asp-for="Genere" class="form-control">
                    @foreach (var item in Enum.GetNames(typeof(GenereFilm)))
                    {
                        <option value="@item">@item</option>
                    }
                </select>
                <span asp-validation-for="Genere" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Durata" class="control-label"></label>
                <input asp-for="Durata" class="form-control" />
                <span asp-validation-for="Durata" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
